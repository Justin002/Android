<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/app_bg"
    android:orientation="vertical" >

    <include layout="@layout/title_layout_no_right" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="9sp"
            android:text="@string/mine_copyright"
            android:drawablePadding="10dp"
            android:textColor="@color/e_button_bg_off"
            android:drawableTop="@drawable/setting_bg" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_line"
        android:background="@color/line_grey" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mine_height"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:paddingLeft="@dimen/XHSpace"
        android:paddingRight="@dimen/XHSpace" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black_color"
            android:textSize="@dimen/font_btn_ll"
            android:text="@string/mine_about_version" />

        <TextView
            android:id="@+id/version_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_grey_color"
            android:textSize="@dimen/font_btn_lll"
            android:text="v1.2" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_line"
        android:background="@color/line_grey" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mine_height"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:paddingLeft="@dimen/XHSpace"
        android:paddingRight="@dimen/XHSpace">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black_color"
            android:textSize="@dimen/font_btn_ll"
            android:text="@string/mine_about_weixin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_grey_color"
            android:textSize="@dimen/font_btn_lll"
            android:layout_alignParentRight="true"
            android:text="公众号：yscfcom" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_line"
        android:background="@color/line_grey" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mine_height"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:paddingLeft="@dimen/XHSpace"
        android:paddingRight="@dimen/XHSpace" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black_color"
            android:textSize="@dimen/font_btn_ll"
            android:text="@string/mine_about_weibo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_grey_color"
            android:textSize="@dimen/font_btn_lll"
            android:text="昵称：e生财富" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_line"
        android:background="@color/line_grey" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mine_height"
        android:background="@color/white"
        android:paddingLeft="@dimen/XHSpace"
        android:paddingRight="@dimen/XHSpace" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black_color"
            android:layout_centerVertical="true"
            android:textSize="@dimen/font_btn_ll"
            android:text="@string/mine_about_service" />

        <TextView
            android:id="@+id/service_tel_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="@color/e_main_bg_title"
            android:textSize="@dimen/font_btn_lll"
            android:text="@string/mine_about_service_tel" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_line"
        android:background="@color/line_grey" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginRight="@dimen/title_left_padding"
        android:gravity="right"
        android:textSize="@dimen/font_text_l"
        android:textColor="@color/e_text_bg_black"
        android:text="@string/mine_about_working_time" />

</LinearLayout>