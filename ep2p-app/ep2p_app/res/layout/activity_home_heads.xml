<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/e_main_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dip" >

            <com.beyondsoft.ep2p.activity.home.LoopViewPager
                android:id="@+id/act_login_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/act_loop_view_dot_layout"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:background="#00000000"
                android:gravity="center"
                android:orientation="horizontal" />
        </RelativeLayout>
        
        <LinearLayout
            android:id="@+id/ll_notice_portal"
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:background="@drawable/home_dis_redbag_sys"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/paga_img_tz_03"
                android:drawablePadding="10dp"
                android:paddingLeft="15dp"
                android:textColor="@color/white" />
            
         <!--
            <com.beyondsoft.ep2p.view.AutoTextView
                android:id="@+id/tv_notice_portal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textColor="@color/white"/>scrolltext:animationDuration="500"-->
                
     <com.beyondsoft.ep2p.view.ScrollTextViewLayout
        android:id="@+id/mutil_text_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/text1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
                android:singleLine="true"
                android:textColor="@color/white" />
        </com.beyondsoft.ep2p.view.ScrollTextViewLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="124dip"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_etype_jihua"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:paddingTop="20dp"
                android:paddingBottom="5dp"
                android:drawableTop="@drawable/page_img_ejihua_03"
                android:gravity="center"
                android:text="@string/cfp_type_plan2"
                android:background="@drawable/dis_redbag_tv"
                android:textColor="@color/e_text_bg_black" />

            <View
                android:layout_width="@dimen/title_line"
                android:layout_height="match_parent"
                android:background="@drawable/page_img_xian_03" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="124dip"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_etype_sanbiao"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:drawableLeft="@drawable/page_img_esanb_03"
                    android:background="@drawable/dis_redbag_tv"
                    android:text="@string/cfp_type_invest2"
                    android:drawablePadding="10dp"
                    android:textColor="@color/e_text_bg_black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_line"
                    android:background="@drawable/page_img_xian_03"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/tv_etype_zhuanrang"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:drawableLeft="@drawable/mine_item3_icon"
                    android:drawablePadding="10dp"
                    android:background="@drawable/dis_redbag_tv"
                    android:gravity="center_vertical"
                    android:text="@string/cfp_type_prefecture2"
                    android:textColor="@color/e_text_bg_black" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_line"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_home_tzline"
                android:background="@drawable/page_img_xian_03" />

            <TextView android:id="@+id/tv_home_tzline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:text="@string/cfp_txt_recommend"
                android:textColor="@color/e_text_bg_huise_black"
                android:textSize="@dimen/font_text_m" />

            <TextView 
                android:layout_toRightOf="@+id/tv_home_tzline"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/title_line"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:background="@drawable/page_img_xian_03" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
