<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/frament_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/main_driver_line" />

    <View
        android:id="@+id/main_driver_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_above="@+id/menu_panel_rg"
        android:background="#a4a7a8" />

    <RadioGroup
        android:id="@+id/menu_panel_rg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f3f3f4"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/home_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/home_icon_btn"
            android:gravity="center"
            android:text="首页"
            android:textColor="@color/main_bottom_selector"
            android:textSize="@dimen/font_text_ll"/>

        <RadioButton
            android:id="@+id/discover_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/discover_icon_btn"
            android:background="@null"
            android:drawablePadding="3dp"
            android:button="@null"
            android:gravity="center"
            android:textColor="@color/main_bottom_selector"
            android:textSize="@dimen/font_text_ll"
            android:text="发现" />

        <RadioButton
            android:id="@+id/mine_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/mine_icon_btn"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="3dp"
            android:button="@null"
            android:gravity="center"
            android:textColor="@color/main_bottom_selector"
            android:textSize="@dimen/font_text_ll"
            android:text="我的" />
    </RadioGroup>

</RelativeLayout>