<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical" >

    <include layout="@layout/title_layout" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    style="@style/txt_zc_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:drawablePadding="10dp"
                    android:drawableTop="@drawable/e_img_zc_authentication_03"
                    android:text="@string/security_center_real_name_auth_label" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_horizontal"
                    android:text="@string/non_mainland_auth_hint"
                    android:textColor="@color/e_text_bg_huise_black"
                    android:textSize="@dimen/font_text_l" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_line"
                    android:layout_marginTop="19dp"
                    android:background="@color/e_style_hxian" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="10dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/security_center_real_name_label"
                            android:textColor="@color/e_text_bg_black"
                            android:textSize="@dimen/font_btn_mm" />

                        <EditText
                            android:id="@+id/et_real_name"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:layout_marginLeft="5dip"
                            android:hint="@string/security_center_real_name_label_hint"
                            android:maxLength="12"
                            android:textColorHint="@color/e_button_bg_off"
                            android:textColor="@color/e_text_bg_black"
                            android:textSize="@dimen/font_btn_ll"
                            android:cursorVisible="true"
                            android:textCursorDrawable="@null" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/title_line"
                        android:layout_marginLeft="10dp"
                        android:background="@color/e_style_hxian" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="10dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/auth_card_no"
                            android:textColor="@color/e_text_bg_black"
                            android:textSize="@dimen/font_btn_mm" />

                        <EditText
                            android:id="@+id/et_id_card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:layout_marginLeft="5dip"
                            android:hint="@string/please_input_auth_card_no"
                            android:textColorHint="@color/e_button_bg_off"
                            android:maxLength="18"
                            android:textSize="@dimen/font_btn_ll"
                            android:textColor="@color/e_text_bg_black"
                            android:cursorVisible="true"
                            android:textCursorDrawable="@null" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_line"
                    android:background="@color/e_style_hxian" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_line"
                android:layout_marginTop="19dp"
                android:background="@color/e_style_hxian" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="160dip"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/XXHSpace"
                    android:layout_marginRight="@dimen/XXHSpace"
                    android:layout_marginTop="@dimen/XHSpace"
                    android:gravity="center_horizontal"
                    android:text="@string/upload_auth_resource"
                    android:textColor="@color/e_button_bg"
                    android:textSize="@dimen/font_text_l" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_card_pic_1"
                        android:layout_width="60dip"
                        android:layout_height="60dip"
                        android:layout_marginRight="@dimen/HSpace"
                        android:src="@drawable/icon_add_picture"
                        android:contentDescription="@string/app_name" />

                    <ImageView
                        android:id="@+id/iv_card_pic_2"
                        android:layout_width="60dip"
                        android:layout_height="60dip"
                        android:layout_marginLeft="@dimen/HSpace"
                        android:src="@drawable/icon_add_picture"
                        android:contentDescription="@string/app_name" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_line"
                android:background="@color/e_style_hxian" />

            <Button
                android:id="@+id/bt_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/mine_bn_shape_bg"
                android:enabled="false"
                android:text="@string/security_center_submit_auth"
                android:textColor="@color/white"
                android:textSize="19sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>