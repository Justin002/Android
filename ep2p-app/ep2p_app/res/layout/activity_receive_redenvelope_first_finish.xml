<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@drawable/red_pag_finish"
    android:orientation="vertical" >
   

    <TextView
        android:id="@+id/tv_shengyu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
        android:layout_marginTop="220dp"
        android:text="剩余0/200"
         android:textColor="@color/dis_r_zhongse"
        android:textSize="@dimen/font_text_h" />

    <TextView
        android:id="@+id/tv_look_redbag_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:drawableRight="@drawable/discover_r_chai_into"
        android:gravity="center_vertical"
        android:text="看看所有人的手气 "
        android:textColor="@color/orange"
        android:textSize="@dimen/font_text_h" />

    <RelativeLayout
        android:id="@+id/redbag_rl"
        android:layout_width="270dp"
        android:layout_height="95dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/discover_r_chai_tip" >
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_mianzhe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="免责声明：\n本活动与apple公司无关"
        android:textColor="@color/dis_r_zhongse"
        android:textSize="@dimen/font_text_m" />

</LinearLayout>