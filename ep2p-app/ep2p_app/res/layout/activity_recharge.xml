<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical" >

    <include layout="@layout/title_layout" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:background="@color/app_bg"
        android:gravity="center_vertical"
        android:paddingLeft="17dp"
        android:paddingRight="0dp"
        android:paddingTop="12dp"
        android:text="@string/recharge_mine_bind_bank_card"
        android:textColor="@color/e_text_news_context"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_line"
        android:background="#bbbbbb" />

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="44dip"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:gravity="center"
            android:text="姓名"
            android:textColor="@color/text_color"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_recharge_username"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:background="@null"
            android:paddingLeft="11dp"
            android:paddingRight="0dp"
            android:text="戴用明"
            android:textColor="@color/e_text_bg_huise_black"
            android:textSize="16sp"
            android:enabled="false" />

        <ImageView
            android:id="@+id/iv_bank_card_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="17dp"
            android:src="@drawable/recharge_bank_card_prompt" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_line"
        android:background="#bbbbbb" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="10dip"
        android:background="@color/app_bg" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_line"
        android:background="#bbbbbb" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/HSpace2"
        android:paddingRight="@dimen/HSpace" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="银行卡号"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_btn_lll" />

        <com.beyondsoft.ep2p.view.BankCardNumEditText
            android:id="@+id/et_bank_card_number"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/HSpace"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:cursorVisible="true"
            android:textCursorDrawable="@drawable/cursor_blue"
            android:hint="请输入本人银行卡号"
            android:inputType="number"
            android:singleLine="true"
            android:maxLength="23"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_btn_0" />

        <ImageView
            android:id="@+id/iv_bank_card_delete"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:scaleType="centerInside"
            android:src="@drawable/icon_delete"
            android:visibility="invisible" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@color/line_grey" />

    <LinearLayout
        android:id="@+id/ll_input_bank_card_number"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:background="@color/orange"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tv_bank_card_no_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/LSpace"
            android:minWidth="55dip"
            android:textColor="@color/white"
            android:textSize="@dimen/font_btn_x" />

        <TextView
            android:id="@+id/tv_bank_card_no_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/LSpace"
            android:minWidth="55dip"
            android:textColor="@color/white"
            android:textSize="@dimen/font_btn_x" />

        <TextView
            android:id="@+id/tv_bank_card_no_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/LSpace"
            android:minWidth="55dip"
            android:textColor="@color/white"
            android:textSize="@dimen/font_btn_x" />

        <TextView
            android:id="@+id/tv_bank_card_no_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/LSpace"
            android:minWidth="55dip"
            android:textColor="@color/white"
            android:textSize="@dimen/font_btn_x" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_recharge_first_next"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_marginLeft="38dip"
        android:layout_marginRight="38dip"
        android:layout_marginTop="40dip"
        android:background="@drawable/btn_auto_tender_next_selector2"
        android:gravity="center"
        android:text="@string/next_step"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:enabled="false" />

</LinearLayout>