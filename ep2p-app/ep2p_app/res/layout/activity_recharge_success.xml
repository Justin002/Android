<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical" >

    <include layout="@layout/title_layout" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="48dip"
            android:layout_height="48dip"
            android:layout_margin="@dimen/MSpace"
            android:src="@drawable/icon_congratulations" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="恭喜您，充值成功！"
            android:textColor="@color/dark"
            android:textSize="@dimen/font_btn_lll" />

        <TextView
            android:id="@+id/tv_recharge_money_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥10000.00"
            android:textColor="@color/orange"
            android:textSize="24sp" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:text="预计金额在60秒内到达账户"
            android:textColor="@color/e_text_huise_buttom"
            android:textSize="14sp" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="具体时间取决充值银行"
            android:textColor="@color/e_text_huise_buttom"
            android:textSize="14sp" />
    </LinearLayout>


</LinearLayout>