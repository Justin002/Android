<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:seekarc="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical" >

    <include layout="@layout/title_layout_no_right" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/seek_layout"
                        android:layout_width="match_parent"
                        android:layout_height="233dp"
                        android:background="@drawable/security_center_top_bg" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" 
                            android:layout_centerInParent="true"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                            
                             <TextView
                                android:id="@+id/seekArcProgress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="bottom"
                                android:paddingTop="30dp"
                                android:layout_marginBottom="-20dp"
                                android:text="0"
                                android:textColor="#d78b53"
                                android:textSize="75sp" />

                            <TextView
                                android:id="@+id/seekArcProgress_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"                       
                                android:text="@string/security_level_low"
                                android:textColor="#d78b53"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="240dp"
                            android:layout_height="183dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="27dp"
                            android:background="@drawable/security_center_circle" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/security_level_hint"
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:background="#3497da"
                        android:gravity="center"
                        android:text="@string/security_level_low_hint"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_btn_0" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_line"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/line_grey" />

                <RelativeLayout
                    android:id="@+id/real_name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/mine_height"
                    android:background="@drawable/item_list_item_bg_selector" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:text="@string/security_center_real_name"
                        android:textColor="@color/e_text_bg_huise_black"
                        android:textSize="@dimen/font_btn_ll" />

                    <TextView
                        android:id="@+id/real_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/real_name_arrow"
                        android:textColor="@color/text_grey_color"
                        android:textSize="@dimen/font_btn_0" />

                    <ImageView
                        android:id="@+id/real_name_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/title_left_padding"
                        android:src="@drawable/swore_right_mine" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_line"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:background="@color/line_grey" />

                <RelativeLayout
                    android:id="@+id/phone_bound_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/mine_height"
                    android:background="@drawable/item_list_item_bg_selector">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:text="@string/security_center_phone_bound"
                        android:textColor="@color/e_text_bg_huise_black"
                        android:textSize="@dimen/font_btn_ll" />

                    <TextView
                        android:id="@+id/phone_bound_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/phone_bound_arrow"
                        android:textColor="@color/text_grey_color"
                        android:textSize="@dimen/font_btn_0" />

                    <ImageView
                        android:id="@+id/phone_bound_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/title_left_padding"
                        android:src="@drawable/swore_right_mine" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_line"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:background="@color/line_grey" />

                <RelativeLayout
                    android:id="@+id/login_pwd_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/mine_height"
                    android:background="@drawable/item_list_item_bg_selector">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:text="@string/security_center_login_pwd"
                        android:textColor="@color/e_text_bg_huise_black"
                        android:textSize="@dimen/font_btn_ll" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/login_pwd_arrow"
                        android:text="@string/pay_psd_setting2"
                        android:textColor="@color/e_main_bg_title"
                        android:textSize="@dimen/font_btn_0" />

                    <ImageView
                        android:id="@+id/login_pwd_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/title_left_padding"
                        android:src="@drawable/swore_right_mine" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_line"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:background="@color/line_grey" />

                <RelativeLayout
                    android:id="@+id/pay_pwd_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/mine_height"
                    android:background="@drawable/item_list_item_bg_selector" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:text="@string/security_center_pay_pwd"
                        android:textColor="@color/e_text_bg_huise_black"
                        android:textSize="@dimen/font_btn_ll" />

                    <TextView
                        android:id="@+id/pay_pwd_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/pay_pwd_arrow"
                        android:textColor="@color/text_grey_color"
                        android:textSize="@dimen/font_btn_0" />

                    <ImageView
                        android:id="@+id/pay_pwd_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/title_left_padding"
                        android:src="@drawable/swore_right_mine" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_line"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:background="@color/line_grey" />

                <RelativeLayout
                    android:id="@+id/gesture_pwd_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/mine_height"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginTop="9dp"
                        android:text="@string/security_center_gesture_pwd2"
                        android:textColor="@color/e_text_bg_huise_black"
                        android:textSize="@dimen/font_btn_ll" />

                    <CheckBox
                        android:id="@+id/switch_gesture_cb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/title_left_padding"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/my_setting_state"
                        android:button="@null"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_line"
                    android:background="@color/line_grey" />
            </LinearLayout>

            <com.beyondsoft.ep2p.view.SeekArc
                android:id="@+id/seekArc"
                android:layout_width="296dp"
                android:layout_height="296dp"
                android:layout_centerHorizontal="true"
                android:padding="25dp"
                seekarc:rotation="212"
                seekarc:startAngle="30"
                seekarc:sweepAngle="237"
                seekarc:arc_max="45"
                seekarc:touchInside="true" 
                seekarc:arcWidth="3dp"
                seekarc:arcColor="#66ffffff"
                seekarc:progressColor="#ccd78b53"/>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>