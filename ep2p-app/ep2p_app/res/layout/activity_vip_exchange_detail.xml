<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/e_main_bg"
    android:orientation="vertical" >

    <include layout="@layout/title_layout_no_right" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginTop="48dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/e_main_bg_title" >
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_vip_year"
            android:layout_centerHorizontal="true"
            android:src="@drawable/vip_detail_icon"/>

        <TextView
            android:id="@+id/tv_vip_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="6dp"
            android:layout_alignParentBottom="true"
            android:text="1年"
            android:textColor="@color/white"
            android:textSize="@dimen/font_title_m" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/head_txt_padding_left"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/vip_detail_content1"
            android:textColor="@color/text_black_color"
            android:textSize="@dimen/font_btn_lll" />

        <TextView
            android:id="@+id/tv_vip_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="12000"
            android:textColor="@color/orange"
            android:textSize="@dimen/font_btn_lll" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/mine_credits"
            android:textColor="@color/text_black_color"
            android:textSize="@dimen/font_btn_lll" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/vip_detail_time"
            android:textColor="@color/text_grey_color"
            android:textSize="@dimen/font_btn_0" />

        <TextView
            android:id="@+id/tv_vip_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="1年"
            android:textColor="@color/text_grey_color"
            android:textSize="@dimen/font_btn_0" />
    </LinearLayout>
    
     <Button
        android:id="@+id/bt_vip_detail_exchange"
        android:layout_width="@dimen/btn_width"
        android:layout_height="@dimen/btn_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:background="@drawable/mine_bn_shape_bg"
        android:text="@string/vip_bt_exchange"
        android:textColor="@color/white"
        android:textSize="@dimen/font_btn_mm" />

</LinearLayout>