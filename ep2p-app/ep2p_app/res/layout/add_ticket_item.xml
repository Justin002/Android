<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
         android:background="@drawable/item_list_item_bg_selector"
        android:layout_height="@dimen/mine_invite_item_height_h" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_add_ticket_year"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:drawableTop="@drawable/add_ticket_item"
                android:gravity="center_horizontal"
                android:paddingTop="12dp"
                android:textColor="@color/white"
                android:text="+0.5%" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/swore_right_mine" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_add_ticket_count"
            android:layout_alignBottom="@+id/tv_add_ticket_count"
            android:layout_toRightOf="@+id/tv_add_ticket_count"
            android:text="积分"
             android:layout_marginTop="5dp"
            android:textColor="#666666"
            android:textSize="@dimen/font_text_m" />

        <TextView
            android:id="@+id/tv_add_ticket_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_add_ticket_date"
            android:layout_alignTop="@+id/relativeLayout1"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/relativeLayout1"
            android:paddingTop="8dp"
            android:text="200000"
            android:textColor="@color/orange"
            android:textSize="@dimen/font_text_m" />

        <TextView
            android:id="@+id/tv_add_ticket_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/relativeLayout1"
            android:layout_alignLeft="@+id/tv_add_ticket_count"
            android:layout_alignTop="@+id/imageView2"
            android:gravity="center"
            android:layout_marginTop="-5dp"
            android:text="有效期180天" />

    </RelativeLayout>

    <View 
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_line"
        android:background="@color/line_grey"/>

</LinearLayout>