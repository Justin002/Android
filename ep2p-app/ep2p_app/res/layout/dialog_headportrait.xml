<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#55555555"
    android:gravity="center_horizontal"
    >

  

    <TextView
        android:id="@+id/tv_photos"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/line"
        android:background="@drawable/corner_text_head"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:text="相册"
        android:textColor="@color/font_blue"
        android:textSize="16sp" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
         android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_above="@+id/tv_pick_photo"
        android:background="#ebebeb" />

    <TextView
        android:id="@+id/tv_pick_photo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/line1"
        android:background="@drawable/corner_text_bottom"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:layout_marginBottom="10dp"
        android:text="拍照"
         android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textColor="@color/font_blue"
        android:textSize="16sp" />

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/tv_cancel"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:background="#ebebeb" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/corner_text_all"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:text="取消"
         android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/font_blue"
        android:textSize="16sp" />

</RelativeLayout>