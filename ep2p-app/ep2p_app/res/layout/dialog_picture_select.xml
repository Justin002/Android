<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_round_white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="@string/please_select"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#9b9e9e" />

    <TextView
        android:id="@+id/tv_take_photo"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@drawable/item_list_item_bg_selector"
        android:gravity="center"
        android:text="@string/personal_take_picture"
        android:textColor="@color/font_blue"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#9b9e9e" />

    <TextView
        android:id="@+id/tv_select_picture"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@drawable/item_list_item_bg_selector"
        android:gravity="center"
        android:text="@string/personal_photo_album"
        android:textColor="@color/font_blue"
        android:textSize="18sp" />

</LinearLayout>