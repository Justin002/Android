<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/fragment_search_by_grade_rl0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f7f7f7"
            android:padding="10dp" >

            <TextView
                android:id="@+id/fragment_search_by_grade_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="取消"
                android:textColor="#007aff"
                android:textSize="18sp" />
             <TextView
                android:id="@+id/fragment_search_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text=""
                android:textColor="#252525"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/fragment_search_by_grade_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="完成"
                android:textColor="#007aff"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <com.beyondsoft.ep2p.view.wheel.WheelView
                android:id="@+id/fragment_search_by_grade_whileview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_centerVertical="true"
                android:orientation="horizontal" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_line"
                    android:layout_alignParentTop="true"
                    android:background="@color/dis_redtail_line" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_line"
                    android:layout_alignParentBottom="true"
                    android:background="@color/dis_redtail_line" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>