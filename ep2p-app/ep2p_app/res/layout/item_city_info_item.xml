<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_letter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/dis_r_more_normal" >

        <TextView
            android:id="@+id/tv_letter"
            android:layout_width="fill_parent"
            android:layout_height="28dip"
            android:layout_marginLeft="@dimen/HSpace2"
            android:layout_marginTop="@dimen/LSpace"
            android:gravity="center_vertical"
            android:text="A"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_text_l" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@color/font_gray" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:background="@drawable/item_list_item_bg_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/nomalSpace" >

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/HSpace2"
            android:text="广州未赢够"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_btn_lll" />
    </LinearLayout>

</LinearLayout>