<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="132dip"
        android:background="@drawable/item_list_item_bg_selector"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dip"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/HSpace2"
            android:paddingRight="@dimen/HSpace2" >

            <TextView
                android:id="@+id/tv_borrowCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D15110199a"
                android:textColor="@color/e_text_bg_huise_black"
                android:textSize="@dimen/font_text_lm" />

            <View
                android:layout_width="0dip"
                android:layout_height="1dip"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_transfer_states"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="转让中"
                android:textColor="@color/e_text_bg_huise_black"
                android:textSize="@dimen/font_text_lm" 
                android:paddingRight="@dimen/HSpace2"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="70dip"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:gravity="center_vertical|left"
                android:orientation="vertical"
                android:paddingLeft="@dimen/HSpace2" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal" >
                    <TextView
                        android:id="@+id/tv_projectValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5000"
                        android:textColor="@color/e_text_bg_huise_black"
                        android:textSize="@dimen/font_btn_x" />
                    <TextView
                        android:id="@+id/tv_projectValue_float"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-5dip"
                        android:text=" .00（元）"
                        android:textColor="@color/e_text_bg_huise_black"
                        android:textSize="@dimen/font_btn_l" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="项目价值"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/e_text_bg_huise_black"
                    android:textSize="@dimen/font_text_lm" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical|right"
                android:orientation="vertical"
                android:paddingRight="@dimen/XXHSpace" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical|right"
                    android:orientation="vertical" >

                      <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal" >
                    <TextView
                        android:id="@+id/tv_successAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4900"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/font_btn_x" />
                   
                    <TextView
                        android:id="@+id/tv_successAmount_float"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" .00（元）"
                        android:textColor="@color/orange"
                        android:layout_marginLeft="-5dip"
                        android:textSize="@dimen/font_btn_l" />
                </LinearLayout>
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="转让价格"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/e_text_bg_huise_black"
                        android:textSize="@dimen/font_text_lm" 
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
         <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/app_bg" />
                <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dip"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/HSpace2"
            android:paddingRight="@dimen/HSpace2" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剩余期限 :"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_text_l" />
            <TextView
                android:id="@+id/tv_timeRemaining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12个月"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_text_l" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布时间： "
                android:layout_marginLeft="10dp"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_text_l" />
            <TextView
                android:id="@+id/tv_investmentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016.1.2 15:20"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_text_l" />
            
        </LinearLayout>
    </LinearLayout>

</LinearLayout>