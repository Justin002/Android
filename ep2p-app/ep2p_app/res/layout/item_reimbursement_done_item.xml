<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

   <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="112dip"
        android:background="@drawable/item_list_item_bg_selector"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dip"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/HSpace2"
            android:paddingRight="@dimen/HSpace2" >

            <TextView
                android:id="@+id/tv_borrowCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D15110199a"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_text_lm" />

            <View
                android:layout_width="0dip"
                android:layout_height="1dip"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               
                android:text="已还款"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_text_lm" />

        </LinearLayout>

      

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="80dip"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:gravity="center_vertical|left"
                android:orientation="vertical"
                android:paddingLeft="@dimen/HSpace2" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_borrowMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5000"
                        android:textColor="@color/text_black_color"
                        android:textSize="@dimen/font_btn_x" />

                    <TextView
                       android:id="@+id/tv_borrowMoney_float"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" .00（元）"
                        android:textColor="@color/text_black_color"
                        android:textSize="@dimen/font_btn_l" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="借款金额"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/e_text_huise_buttom"
                    android:textSize="@dimen/font_text_lm" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.5"
                android:gravity="center_vertical|right"
                android:orientation="vertical"
                android:paddingRight="@dimen/HSpace2"  >

                <TextView
                    android:id="@+id/tv_borrow_deadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12个月"
                    android:textColor="@color/text_black_color"
                    android:textSize="@dimen/font_text_h" 
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/period_time"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/e_text_huise_buttom"
                    android:textSize="@dimen/font_text_lm" />
            </LinearLayout>

            
        </LinearLayout>
    </LinearLayout>

</LinearLayout>