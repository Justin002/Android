<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_project_information"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/txt_project_information"
            android:textColor="@color/tab_text_font_selector"
            android:textSize="@dimen/font_text_lm" />

        <TextView
            android:id="@+id/tv_fk_information"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="0.5dip"
            android:layout_marginRight="0.5dip"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/txt_fk_information"
            android:textColor="@color/tab_text_font_selector"
            android:textSize="@dimen/font_text_lm" />

        <TextView
            android:id="@+id/tv_hk_schedule"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/txt_hk_schedule3"
            android:textColor="@color/tab_text_font_selector"
            android:textSize="@dimen/font_text_lm" />
        
        <TextView
            android:id="@+id/tv_tz_record"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/txt_tz_record"
            android:textColor="@color/tab_text_font_selector"
            android:textSize="@dimen/font_text_lm" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/svp_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>
    <!--  
    <com.beyondsoft.ep2p.view.SpecialViewPager
        android:id="@+id/svp_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
    </com.beyondsoft.ep2p.view.SpecialViewPager>
-->
</LinearLayout>