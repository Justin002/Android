<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mine_feedback_height"
        android:gravity="center_vertical"
        android:background="@drawable/item_list_item_bg_selector"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content" 
            android:layout_weight="1"
            android:paddingLeft="28dp"
            android:orientation="vertical">
            <TextView 
                android:id="@+id/invite_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_btn_lll"
                android:textColor="@color/text_black_color"
                android:text="杨**"/>
            <TextView 
                android:id="@+id/invite_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="@dimen/font_text_lmm"
                android:textColor="@color/text_color"
                android:text="2015-11-04  14:45:34"/>
        </LinearLayout>
        <TextView 
                android:id="@+id/invite_reward_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#29b92c"
                android:textSize="@dimen/font_title_m"
                android:text="+15.00"/>
    </LinearLayout>

</LinearLayout>