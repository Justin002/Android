<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="118dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/share_weixin_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="微信"
                android:textColor="@color/white"
                android:textSize="@dimen/font_text_lmm"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:drawableTop="@drawable/share_weixin_icon" />
            
            <TextView
                android:id="@+id/share_weifriend_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="朋友圈"
                android:textColor="@color/white"
                android:textSize="@dimen/font_text_lmm"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:drawableTop="@drawable/share_weifriend_icon" />

            <TextView
                android:id="@+id/share_qq_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="腾讯"
                android:textColor="@color/white"
                android:textSize="@dimen/font_text_lmm"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:drawableTop="@drawable/share_qq_icon" />

            <TextView
                android:id="@+id/share_sina_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="微博"
                android:textColor="@color/white"
                android:textSize="@dimen/font_text_lmm"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:drawableTop="@drawable/share_sina_icon" />
        </LinearLayout>

</LinearLayout>