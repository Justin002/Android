<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:background="@drawable/item_list_item_bg_selector" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/e_main_bg_title"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_vip_year"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:drawableTop="@drawable/add_ticket_item"
                android:gravity="center_horizontal"
                android:paddingTop="10dp"
                android:text="1年"
                android:textSize="@dimen/font_btn_0"
                android:textColor="@color/white" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/swore_right_mine" />

      <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/relativeLayout1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_vip_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"             
                    android:text="-2000"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/font_btn_lll" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分"
                    android:textColor="@color/e_text_bg_black"
                    android:textSize="@dimen/font_btn_lll" />
            </LinearLayout>

            <TextView
                android:id="@+id/ticket_validity_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="有效期180天"
                android:textColor="@color/e_text_bg_huise_black"
                android:textSize="@dimen/font_text_l" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>