<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:background="@color/e_main_bg_title" >

    <ImageView
        android:id="@+id/title_left_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/title_left_padding"
        android:src="@drawable/back_btn" />

    <TextView
        android:id="@+id/title_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/title_left_btn"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:text="@string/cancel"
        android:textColor="@color/white"
        android:textSize="@dimen/font_btn_lll" />

    <TextView
        android:id="@+id/title_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Title"
        android:textColor="@color/white"
        android:textSize="@dimen/font_btn_mm" />

    <TextView
        android:id="@+id/title_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingLeft="@dimen/title_left_padding"
        android:paddingRight="@dimen/title_left_padding"
        android:text="@string/login_right_txt"
        android:textColor="@color/white"
        android:textSize="@dimen/font_btn_lll" />

</RelativeLayout>